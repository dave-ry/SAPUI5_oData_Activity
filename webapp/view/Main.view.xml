<mvc:View controllerName="sapips.training.odata.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core = "sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
<!-- Reference from Demo Kit :) -->
<!-- Sorted by ProductName -->
    <Table id="tblProducts" inset="false" items="{ path: '/Products', sorter: { path: 'ProductName'} }"  >  

<!-- To display the Products Header Text -->
		<headerToolbar>
			<OverflowToolbar id="toolbarHeader">
				<Title id="titleHeader" text="{i18n>titleProducts}"/>            
			</OverflowToolbar>
		</headerToolbar>

<!-- To display the Wide Range Available Products Info Text -->
		<infoToolbar>
			<OverflowToolbar id="toolbarInfo">
				<Label id="lblInfo" text="{i18n>infoText}" />
			</OverflowToolbar>
		</infoToolbar>

<!-- Build Column Header -->
		<columns>
            <Column id="colProducts">
            <Text id="txtProducts" text="{i18n>colProduct}">
            </Text>
            </Column>

            <Column id="colSupplierID">
            <Text id="txtSupplierID" text="{i18n>colSupplierID}">
            </Text>
            </Column>
            
            <Column id="colPrice">
            <Text id="txtPrice" text="{i18n>colPrice}">
            </Text>
            </Column>
        </columns>

<!-- Create Product List  -->
        <items>
            <ColumnListItem id="clistItems" vAlign="Middle">
            <!-- No ID attribute so no need to put identifier -->
                <cells>

                <!-- The Product column uses an Object Identifier and are using the ProductName and ProductID -->
                    <ObjectIdentifier id="objProductName" 
                                    title="{ProductName}" 
                                    text="{i18n>txtProductID} {ProductID}" >
                    </ObjectIdentifier>

                <!-- The Supplier ID column uses a Text object and uses SupplierID -->
                    <Text id="txtSuppID" text="{SupplierID}">
                    </Text>
                    
                <!-- The Price column uses an Object Identifier and are using the UnitPrice and QuantityPerUnit -->
                    <ObjectIdentifier id="objPrice" 
                                    title="{UnitPrice}" 
                                    text="{QuantityPerUnit}" >
                    </ObjectIdentifier>

                </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Page>
</mvc:View>